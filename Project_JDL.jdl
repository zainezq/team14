entity Team {
    teamId String unique required,
    teamOwner String,
    created Instant,

    name String maxlength(40) required,
    description String maxlength(512),
    memberCount Integer,
    image ImageBlob,
    colour String,

    schedule String,
    playType PlayType
}

entity TeamMember {
    userId String,
    teamId String
}

entity TeamContact {
    type ContactType,
    value String
}

relationship OneToMany {
    Team{members} to TeamMember{team}
}


relationship OneToOne {
TeamMember{user} to PlayerProfile{userID}
}

relationship OneToMany {
Team{contacts} to TeamContact
}

relationship OneToOne {
Team{owner} to PlayerProfile{userID}
}
